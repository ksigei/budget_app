<div id="<%= dom_id category %>">
  <%= link_to transactions_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" do %>
    <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= category.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Icon:</strong>
    <img src="<%= category.icon %>" alt="<%= category.name %>" class="w-13 h-13">
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">User:</strong>
    <%= category.user.name %>
  </p>
  <p class="my-5">
    <strong class="block font-medium mb-1">Total amount:</strong>
    <%= category.total_amount %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this category", category, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this category', edit_category_path(category), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
  <% end %>
  
</div>
