<%= link_to "<i class='uil uil-arrow-left'></i>".html_safe, categories_path, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
<div id="<%= dom_id transaction %>">
  <table class=" w-full table-auto">
    <thead>
      <tr>
        <th class="px-4 py-2">Name</th>
        <th class="px-4 py-2">Date</th>
        <th class="px-4 py-2">Amount</th>
        <th class="px-4 py-2">Actions</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td class="border px-4 py-2">
        <%= link_to transaction_path(transaction) do %>
          <%= transaction.name %>
        <% end %>
        </td>
        <td class="border px-4 py-2"><%= transaction.updated_at %></td>
        <td class="border px-4 py-2">$<%= transaction.amount %></td>
        <td class="border px-4 py-2 text-center flex justify-center">
          <%= link_to "<i class='uil uil-eye'></i>".html_safe, transaction_path(transaction), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
          <%= button_to "<i class='uil uil-trash-alt'></i>".html_safe, transaction_path(transaction), method: :delete, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
        </td>
      </tr>
    </tbody>
</div>
